{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7
    },
    "extends": "airbnb-base",
    "env": {
        "jest": true,
        "browser": false,
        "amd": true,
        "node": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".json",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "rules": {
        "global-require": 0,
        "no-unused-vars": 1,
        "no-underscore-dangle": "off",
        "no-multi-str": "off"
    }
}